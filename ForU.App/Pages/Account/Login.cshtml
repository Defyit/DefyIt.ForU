@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Autenticação";
}

<!DOCTYPE html>
<html lang="pt-BR" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 4U da DefyIT</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    
    <!-- Bundle CSS DefyIT -->
    <link rel="stylesheet" href="/bundles/app.css" asp-append-version="true" />

    <style>
        /* Variáveis CSS DefyIT para Login */
        :root {
            /* Cores base DefyIT */
            --brand-azul: #021D49;
            --brand-verde: #2AD03D;
            
            /* Tema claro - Login */
            --text: #111;
            --text-muted: #5A667B;
            --bg: #FFFFFF;
            --surface: #F8F9FC;
            --border: #E3E8EF;
        }

        /* Tema escuro - Login (alinhado ao Bootstrap) */
        [data-bs-theme="dark"] {
            --text: #f8f9fa;
            --text-muted: #adb5bd;
            --bg: #212529;
            --surface: #2b3035;
            --border: #495057;
        }

        /* Reset e base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            overflow: hidden;
            background: var(--brand-azul);
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        /* Tema escuro - Background */
        [data-bs-theme="dark"] body {
            background: #212529;
        }

        /* Seção do formulário de login - DefyIT */
        [data-bs-theme="dark"] .login-form-section {
            background: var(--surface) !important;
            color: var(--text);
        }

        [data-bs-theme="dark"] .welcome-title {
            color: var(--text) !important;
        }

        [data-bs-theme="dark"] .welcome-subtitle {
            color: var(--text-muted) !important;
        }

        [data-bs-theme="dark"] .form-label {
            color: var(--text) !important;
        }

        [data-bs-theme="dark"] .form-control {
            background: var(--bg) !important;
            border-color: var(--border) !important;
            color: var(--text) !important;
        }

        [data-bs-theme="dark"] .form-control::placeholder {
            color: var(--text-muted) !important;
        }

        [data-bs-theme="dark"] .form-control:focus {
            background: var(--bg) !important;
            border-color: var(--brand-verde) !important;
            color: var(--text) !important;
            box-shadow: 0 0 0 3px rgba(42, 208, 61, 0.1) !important;
        }

        [data-bs-theme="dark"] .input-icon {
            color: var(--text-muted) !important;
        }

        [data-bs-theme="dark"] .input-group:focus-within .input-icon {
            color: var(--brand-verde) !important;
        }

        [data-bs-theme="dark"] .password-toggle {
            color: var(--text-muted) !important;
        }

        [data-bs-theme="dark"] .password-toggle:hover {
            color: var(--brand-verde) !important;
        }

        [data-bs-theme="dark"] .checkbox-label {
            color: var(--text-muted) !important;
        }

        [data-bs-theme="dark"] .forgot-password a {
            color: var(--brand-verde) !important;
        }

        [data-bs-theme="dark"] .alert-danger {
            background: rgba(220, 53, 69, 0.1) !important;
            color: #dc3545 !important;
            border-left-color: #dc3545 !important;
        }

        /* SweetAlert2 - DefyIT Theme */
        .swal-dark {
            background: var(--surface) !important;
            border: 1px solid var(--border) !important;
        }

        .swal-dark .swal2-title {
            color: var(--text) !important;
        }

        .swal-dark .swal2-content {
            color: var(--text-muted) !important;
        }

        .swal-light {
            background: var(--bg) !important;
            border: 1px solid var(--border) !important;
        }

        .swal-light .swal2-title {
            color: var(--text) !important;
        }

        .swal-light .swal2-content {
            color: var(--text-muted) !important;
        }

        .login-container {
            display: flex;
            height: 100vh;
            width: 100%;
        }

        .login-form-section {
            flex: 1;
            max-width: 33.333%;
            background: var(--bg);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
            position: relative;
            transition: background-color 0.3s ease;
        }

        .login-form-content {
            width: 100%;
            max-width: 400px;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .logo {
            height: 60px;
            width: auto;
            margin: 0 auto;
            display: block;
        }

        /* Logo responsivo ao tema - DefyIT */
        .logo-light {
            display: block;
            margin: 0 auto;
            transition: opacity 0.3s ease;
        }

        .logo-dark {
            display: none;
            margin: 0 auto;
            transition: opacity 0.3s ease;
        }

        [data-bs-theme="dark"] .logo-light {
            display: none;
        }

        [data-bs-theme="dark"] .logo-dark {
            display: block;
            margin: 0 auto;
        }

        .welcome-text {
            text-align: center;
            margin-bottom: 40px;
        }

        .welcome-title {
            font-size: 2rem;
            font-weight: 600;
            color: var(--brand-azul);
            margin-bottom: 8px;
            transition: color 0.3s ease;
        }

        .welcome-subtitle {
            font-size: 1rem;
            color: var(--text-muted);
            font-weight: 400;
            transition: color 0.3s ease;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-label {
            font-weight: 600;
            color: var(--brand-azul);
            margin-bottom: 8px;
            display: block;
            font-size: 14px;
            transition: color 0.3s ease;
        }

        .form-control {
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 12px 16px;
            font-size: 16px;
            width: 100%;
            transition: all 0.3s ease;
            background: var(--surface);
            color: var(--text);
        }

        .form-control:focus {
            border-color: var(--brand-verde);
            box-shadow: 0 0 0 3px rgba(42, 208, 61, 0.1);
            background: var(--bg);
            outline: none;
        }

        .form-control::placeholder {
            color: var(--text-muted);
        }

        .input-group {
            position: relative;
        }

        .input-group .form-control {
            padding-left: 45px;
        }

        .input-group.has-toggle .form-control {
            padding-left: 45px;
            padding-right: 45px;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            z-index: 10;
            pointer-events: none;
            transition: color 0.3s ease;
        }

        .input-group:focus-within .input-icon {
            color: var(--brand-verde);
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
            z-index: 15;
            padding: 0;
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: color 0.3s ease;
        }

        .password-toggle:hover {
            color: var(--brand-verde);
        }

        .checkbox-container {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 24px;
        }

        .checkbox-container input[type="checkbox"] {
            accent-color: var(--brand-verde);
        }

        .checkbox-label {
            font-size: 14px;
            color: var(--text-muted);
            transition: color 0.3s ease;
        }

        .btn-login {
            background: linear-gradient(135deg, var(--brand-verde), #24b82f);
            border: none;
            border-radius: 8px;
            padding: 12px 24px;
            font-size: 16px;
            font-weight: 600;
            color: white;
            width: 100%;
            transition: all 0.3s ease;
            cursor: pointer;
            letter-spacing: 0.3px;
            box-shadow: 0 2px 8px rgba(42, 208, 61, 0.3);
        }

        .btn-login:hover {
            background: linear-gradient(135deg, #24b82f, var(--brand-verde));
            transform: translateY(-1px);
            box-shadow: 0 4px 16px rgba(42, 208, 61, 0.4);
        }
            box-shadow: 0 4px 12px rgba(42, 208, 61, 0.3);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .forgot-password {
            text-align: center;
            margin-top: 20px;
        }

        .forgot-password a {
            color: var(--brand-azul);
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .forgot-password a:hover {
            text-decoration: underline;
            color: var(--brand-verde);
        }

        .alert {
            border-radius: 12px;
            margin-bottom: 24px;
            border: none;
            padding: 16px 20px;
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
            border-left: 4px solid #dc3545;
        }

        .image-section {
            flex: 1;
            background-image: url('https://images.unsplash.com/photo-1600880292203-757bb62b4baf?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80');
            background-size: cover;
            background-position: center;
            position: relative;
        }

        .image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, var(--brand-azul) 0%, rgba(42, 208, 61, 0.8) 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            text-align: center;
            padding: 40px;
        }

        .overlay-content {
            text-align: center;
            max-width: 500px;
            width: 100%;
        }

        .overlay-content h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 16px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .overlay-content p {
            font-size: 1.2rem;
            opacity: 0.95;
            line-height: 1.6;
            margin: 0 auto;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        }

        /* Responsividade */
        @@media (max-width: 768px) {
            .login-container {
                flex-direction: column;
            }

            .login-form-section {
                max-width: 100%;
            }

            .image-section {
                flex: 0;
                min-height: 200px;
            }

            .overlay-content h2 {
                font-size: 1.8rem;
            }

            .overlay-content p {
                font-size: 1rem;
            }

            .login-form-section {
                padding: 30px 20px;
            }

            .welcome-title {
                font-size: 1.6rem;
            }
        }

        @@media (max-width: 480px) {
            .login-form-section {
                padding: 20px 16px;
            }

            .login-form-content {
                max-width: 100%;
            }

            .image-section {
                min-height: 150px;
            }

            .overlay-content h2 {
                font-size: 1.5rem;
            }

            .overlay-content p {
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Seção do Formulário (Esquerda) -->
        <div class="login-form-section">
            <div class="login-form-content">
                <!-- Logo -->
                <div class="logo-container">
                    <img src="/images/logo-defyit.png" alt="ForYou" class="logo logo-light">
                    <img src="/images/logo-defyit-dark.png" alt="ForYou" class="logo logo-dark">
                </div>

                <!-- Texto de Boas-vindas -->
                <div class="welcome-text">
                    <h1 class="welcome-title">Bem vindo ao ForYou!</h1>
                    <p class="welcome-subtitle">Sistema de atendimento feito pra você.</p>
                </div>

                <!-- Mensagem de Erro -->
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @Model.ErrorMessage
                    </div>
                }

                <!-- Formulário de Login -->
                <form method="post">
                    <div class="form-group">
                        <label for="matricula" class="form-label">Matrícula</label>
                        <div class="input-group">
                            <i class="bi bi-person input-icon"></i>
                            <input type="text" 
                                   class="form-control" 
                                   id="matricula" 
                                   name="matricula" 
                                   placeholder="Digite sua matrícula"
                                   value="@Model.Matricula"
                                   maxlength="11"
                                   pattern="[0-9]*"
                                   inputmode="numeric"
                                   required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="senha" class="form-label">Senha</label>
                        <div class="input-group has-toggle">
                            <i class="bi bi-lock input-icon"></i>
                            <input type="password" 
                                   class="form-control" 
                                   id="senha" 
                                   name="senha" 
                                   placeholder="Digite sua senha"
                                   required>
                            <button type="button" 
                                    class="password-toggle" 
                                    id="togglePassword">
                                <i class="bi bi-eye" id="passwordIcon"></i>
                            </button>
                        </div>
                    </div>

                    <div class="checkbox-container">
                        <input type="checkbox" id="manterLogado" name="manterLogado">
                        <label for="manterLogado" class="checkbox-label">Manter autenticado</label>
                    </div>

                    <button type="submit" class="btn-login">
                        Entrar
                    </button>
                </form>

                <!-- <div class="forgot-password">
                    <a href="#">Esqueceu sua senha?</a>
                </div> -->
            </div>
        </div>

        <!-- Seção da Imagem (Direita) -->
        <div class="image-section">
            <div class="image-overlay">
                <div class="overlay-content">
                    <h2>Atendimento Personalizado</h2>
                    <p>Conecte-se com seus clientes de forma eficiente e humanizada. Nossa plataforma foi desenvolvida para oferecer a melhor experiência em atendimento.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="/bundles/app.js" asp-append-version="true" defer></script>

    
    <script>
        // Função auxiliar para SweetAlert2 com tema DefyIT
        function showThemedAlert(options) {
            const isDark = document.documentElement.getAttribute('data-bs-theme') === 'dark';
            
            const themedOptions = {
                ...options,
                background: isDark ? 'var(--surface)' : 'var(--bg)',
                color: isDark ? 'var(--text)' : 'var(--text)',
                customClass: {
                    popup: isDark ? 'swal-dark' : 'swal-light',
                    ...options.customClass
                },
                confirmButtonColor: options.confirmButtonColor || '#2AD03D'
            };
            
            return Swal.fire(themedOptions);
        }

        // Sistema de tema DefyIT (sincronizado com app.js)
        document.addEventListener('DOMContentLoaded', function() {
            const htmlElement = document.documentElement;

            // Verificar tema salvo ou usar preferência do sistema
            const savedTheme = localStorage.getItem('theme');
            const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
            const currentTheme = savedTheme || systemTheme;

            // Aplicar tema inicial
            htmlElement.setAttribute('data-bs-theme', currentTheme);

            // Escutar mudanças na preferência do sistema
            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', function(e) {
                if (!localStorage.getItem('theme')) {
                    const newTheme = e.matches ? 'dark' : 'light';
                    htmlElement.setAttribute('data-bs-theme', newTheme);
                }
            });
        });

        // Validação de matrícula - apenas números
        document.getElementById('matricula').addEventListener('input', function(e) {
            // Remove tudo que não for número
            let value = e.target.value.replace(/\D/g, '');
            // Limita a 11 caracteres
            if (value.length > 11) {
                value = value.substring(0, 11);
            }
            e.target.value = value;
        });

        // Toggle de mostrar/ocultar senha
        document.getElementById('togglePassword').addEventListener('click', function() {
            const senhaInput = document.getElementById('senha');
            const passwordIcon = document.getElementById('passwordIcon');
            
            if (senhaInput.type === 'password') {
                senhaInput.type = 'text';
                passwordIcon.className = 'bi bi-eye-slash';
            } else {
                senhaInput.type = 'password';
                passwordIcon.className = 'bi bi-eye';
            }
        });

        // Validação do formulário
        document.querySelector('form').addEventListener('submit', function(e) {
            const matricula = document.getElementById('matricula').value.replace(/\D/g, '');
            
            if (matricula.length === 0 || matricula.length > 11) {
                e.preventDefault();
                
                showThemedAlert({
                    icon: 'warning',
                    title: 'Matrícula Inválida',
                    text: 'Por favor, digite uma matrícula válida (apenas números, até 11 dígitos).',
                    confirmButtonText: 'Ok'
                });
                
                return false;
            }
        });

        // Foco automático no primeiro campo
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('matricula').focus();
        });

        // Adicionar animação de entrada
        document.addEventListener('DOMContentLoaded', function() {
            const loginForm = document.querySelector('.login-form-content');
            loginForm.style.opacity = '0';
            loginForm.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                loginForm.style.transition = 'all 0.6s ease';
                loginForm.style.opacity = '1';
                loginForm.style.transform = 'translateY(0)';
            }, 100);
        });
    </script>
</body>
</html>