<!DOCTYPE html>
<html lang="pt-BR" data-bs-theme="light">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - 4U da DefyIT</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Bundle CSS com versionamento automático -->
        <link rel="stylesheet" href="/bundles/app.css" asp-append-version="true" />

</head>
<body class="d-flex flex-column min-vh-100">
    <header class="border-bottom bg-body">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid gap-3">
                <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                    <img src="~/images/logo-defyit.png" alt="ForYou Logo" height="40" class="logo-light" />
                    <img src="~/images/logo-defyit-dark.png" alt="ForYou Logo" height="40" class="logo-dark" />
                </a>

                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-primary" type="button" title="Atendimento">
                        <i class="bi bi-headset"></i>
                    </button>
                    <button class="btn btn-outline-secondary" type="button" title="Agenda">
                        <i class="bi bi-calendar3"></i>
                    </button>
                    <button class="btn btn-outline-secondary" type="button" title="Relatórios">
                        <i class="bi bi-graph-up"></i>
                    </button>
                </div>
                

                <div class="btn-group d-flex align-items-center gap-3 ms-auto" role="group" aria-label="Basic checkbox toggle button group">
                    <input type="checkbox" class="btn-check" id="btnOlosConectar" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btnOlosConectar" style="width:160px; text-align:center;">
                        Conectar Olos
                    </label>

                    <input type="checkbox" class="btn-check" id="btnOlosChamadaManual" autocomplete="off" disabled>
                    <label class="btn btn-outline-primary" for="btnOlosChamadaManual" style="width:160px; text-align:center;">
                        Chamada Manual
                    </label>

                    <input type="checkbox" class="btn-check" id="btnOlosPausar" autocomplete="off" disabled>
                    <label class="btn btn-outline-primary" for="btnOlosPausar" style="width:160px; text-align:center;">
                        Pausar
                    </label>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <span class="badge text-bg-primary px-3 py-2" aria-label="Discador ativo">OLOS</span>
                    <span class="badge text-bg-danger px-3 py-2" id="statusBadge">Desconectado</span>
                    <span class="badge text-bg-secondary px-3 py-2" id="statusTime">00:05:32</span>
                </div>

                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-4 me-2"></i>
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    @(User.Identity?.Name ?? "Usuário")
                                }
                                else
                                {
                                    @("Usuário")
                                }
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            
                            <li><a class="dropdown-item" href="/Account/Perfil"><i class="bi bi-person me-2"></i>Perfil</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Configurações</a></li>
                            <li><hr class="dropdown-divider" /></li>

                            <li>
                                <button class="dropdown-item d-flex align-items-center gap-2 theme-toggle" type="button" id="themeToggle">
                                    <span class="position-relative d-inline-flex align-items-center justify-content-center">
                                        <i class="bi bi-sun-fill theme-icon sun-icon"></i>
                                        <i class="bi bi-moon-fill theme-icon moon-icon position-absolute top-50 start-50 translate-middle"></i>
                                    </span>
                                    <span>Tema</span>
                                </button>
                            </li>
                            
                            <li><hr class="dropdown-divider" /></li>

                            <li><a class="dropdown-item" href="/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i>Sair</a></li>
                        </ul>
                        </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="border-bottom bg-body-tertiary">
        <div class="container-fluid">
            <ul class="nav nav-pills py-2" id="pills-tab" role="tablist">
                @await RenderSectionAsync("Tabs", required: false)
                @if (!IsSectionDefined("Tabs"))
                {
                    <li class="nav-item" role="presentation">
                        <span class="nav-link disabled">
                            <i class="bi bi-flag me-2"></i>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                @(User.Claims?.FirstOrDefault(c => c.Type == "Operacao")?.Value ?? "OPERAÇÃO")
                            }
                            else
                            {
                                @("OPERAÇÃO")
                            }
                        </span>
                    </li>
                }
            </ul>
        </div>
    </div>

    <main class="flex-grow-1">
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Modal de Configurações -->
    <div class="modal fade" id="configModal" tabindex="-1" aria-labelledby="configModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="configModalLabel">Configurações do Discador</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Modal de configurações do discador aqui...</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bundle JS com versionamento automático -->
    <script src="/bundles/app.js" asp-append-version="true" defer></script>

    <!-- Scripts específicos da página -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>